<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sos_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="10dp"
        android:text="sos_name"
        android:paddingBottom="10dp" />
    <TextView
        android:id="@+id/sos_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="10dp"
        android:text="sos_number"
        android:paddingBottom="10dp" />
    <EditText
        android:id="@+id/add_sos_name"
        android:layout_width="match_parent"
        android:hint="Enter Emergency Contact Name here"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_sos_number"
        android:hint="Enter Emergency Contact Number here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sos_add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD SOS DETAILS" />
</LinearLayout>